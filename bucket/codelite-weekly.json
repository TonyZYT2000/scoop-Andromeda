{
    "version": "13.0.5",
    "description": "CodeLite is an open source, free, cross platform IDE specialized in C, C++, PHP and JavaScript (mainly for backend developers using Node.js) programming languages which runs best on all major Platforms ( OSX, Windows and Linux )",
    "homepage": "https://codelite.org/",
    "license": {
        "identifier": "GPL-2.0-only",
        "url": "https://github.com/eranif/codelite/blob/master/LICENSE"
    },
    "notes": [
        "This is the weekly build distribution of CodeLite.",
        "Reccomend to install gcc or llvm to compile C/C++ code."
    ],
    "depends": "innounp",
    "suggest": {
        "gcc" : "gcc",
        "llvm" : "llvm"
    },
    "architecture": {
        "64bit": {
            "url": "https://downloads.codelite.org/downloads.php?windows_weekly_64",
            "hash": "sha1:a592bfae93c8e7a581869fcbfeb01d339cf4090d"
        },
        "32bit": {
            "url": "https://downloads.codelite.org/downloads.php?windows_weekly",
            "hash": "sha1:b1635ae462fe320bfc8fb34ce33803fb13bed044"
        }
    },
    "pre_install": [
        "mv $dir\\downloads.php $dir\\codelite-installer.exe"
    ],
    "installer": {
        "script": [
            "innounp -x -d\"$dir\" $dir\\codelite-installer.exe > $dir\\unpack.log",
            "Get-ChildItem \"$dir\\{app}\" -Recurse |  Move-Item -Destination \"$dir\"",
            "Remove-Item \"$dir\\{app}\"",
            "Remove-Item $dir\\codelite-installer.exe",
            "Remove-Item $dir\\install_script.iss",
            "Remove-Item $dir\\unpack.log"
        ]
    },
    "persist": [
        "config"
    ],
    "bin": "codelite.exe",
    "shortcuts": [
        [
            "codelite.exe",
            "codelite"
        ]
    ],
    "checkver": {
        "url": "https://downloads.codelite.org/",
        "regex": "CodeLite ([\\d+\\.\\d+\\.\\d+]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.codelite.org/downloads.php?windows_weekly_64"
            },
            "32bit": {
                "url": "https://downloads.codelite.org/downloads.php?windows_weekly"
            }
        }
    }
}

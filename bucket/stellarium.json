    },
    "bin": "stellarium.exe",
    "shortcuts": [
        [
            "stellarium.exe",
            "Stellarium"
        ]
    ],
    "checkver": {
        "github": "https://github.com/Stellarium/stellarium"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
